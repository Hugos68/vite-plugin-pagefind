{
	"name": "vite-plugin-pagefind",
	"description": "A Vite plugin for easily integrating pagefind into Vite based projects.",
	"version": "0.2.7",
	"license": "MIT",
	"author": {
		"name": "Hugo Korte",
		"email": "hugokorteapple@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Hugos68/vite-plugin-pagefind"
	},
	"keywords": [
		"vite",
		"vite-plugin",
		"pagefind"
	],
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/plugins/pagefind.d.ts",
			"import": "./dist/plugins/pagefind.js"
		},
		"./types": {
			"types": "./dist/types/pagefind.d.ts",
			"import": "./dist/types/pagefind.js"
		}
	},
	"scripts": {
		"dev": "tsc -w",
		"build": "tsc",
		"format": "biome format . --write",
		"lint": "biome lint .",
		"release": "pnpm build && changeset publish"
	},
	"dependencies": {
		"colorette": "^2.0.20",
		"valibot": "0.31.0-rc.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@changesets/cli": "^2.27.3",
		"@types/node": "^20.12.12",
		"typescript": "^5.3.3",
		"vite": "^5.0.12"
	},
	"type": "module"
}
